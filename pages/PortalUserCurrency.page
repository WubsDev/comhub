<div class="sep"></div>
	<apex:form >
		<apex:pageblock title="Change Currency" >
            <apex:pageMessages ></apex:pageMessages>
			<div align="center">
				<apex:outputpanel rendered="{!(closeUserPopup=='')}">
				<div style="height: 23px"><apex:outputLabel value="Please choose your new currency" style="font-weight: bold"/></div>
				<div style="height: 23px"><apex:selectList value="{!selectedValue}" multiselect="false" size="1">
   					<apex:selectOptions value="{!currencyList}"/></apex:selectList>
   				</div>
   				</apex:outputpanel>
				<table>
					<tr>
						<apex:outputpanel rendered="{!(closeUserPopup=='')}">
							<td style="width:100px"><apex:commandButton action="{!updateRecord}" value="Save" rendered="{!(closeUserPopup=='')}"/></td>
							<td><apex:commandButton value="{!if(closeUserPopup=='', 'Cancel', 'Close')}" onClick="self.close();"/>
	                        </td>
                        </apex:outputpanel>
					</tr>
					
					<tr>
						<apex:outputpanel rendered="{!(closeUserPopup!='')}">
							<td colspan="2"><apex:commandButton value="{!if(closeUserPopup=='', 'Cancel', 'Close')}" onClick="self.close();"/>
	                        </td>
                        </apex:outputpanel>
					</tr>					
				</table>
  		</div>
		</apex:pageblock>
	</apex:form>
